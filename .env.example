# ================================
# FINDX Environment Variables
# ================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# ================================
# Firebase Configuration
# ================================
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com 
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abc123def456

# Optional: Firebase Analytics
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ================================
# Google Gemini AI
# ================================
# Get your API key from: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# ================================
# App Configuration (Optional)
# ================================
# Base URL for the app (used for sharing links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Default radius for nearby items search (in km)
NEXT_PUBLIC_DEFAULT_SEARCH_RADIUS=10

# ================================
# Feature Flags  (Optional)
# ================================
# Enable/disable AI features (true/false)
NEXT_PUBLIC_ENABLE_AI_MATCHING=true
NEXT_PUBLIC_ENABLE_AI_DESCRIPTION=true

# Enable/disable push notifications
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

